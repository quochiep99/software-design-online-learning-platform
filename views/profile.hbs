<div id="profile-bg">
    <div class="container margin_120_500">
        {{#if success_msg}}
        <div class="alert alert-success text-center" role="alert">
            {{success_msg}}
        </div>
        {{/if}}
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <form action="/profile" method="POST">
                    <div class="form_title">
                        <h3><strong>1</strong>Basic Information</h3>
                    </div>
                    <div class="step">
                        <div class="row">
                            <div class="col-sm-12">
                                <span class="input">
                                    <input class="input_field" type="text" name="name" value="{{name}}">
                                    <label class="input_label">
                                        <span>Name</span>
                                    </label>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <span class="input">
                                    <input class="input_field" type="email" name="email" value="{{email}}">
                                    <label class="input_label">
                                        <span>Email</span>
                                    </label>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <button type="submit" href="#" class="btn_1 full-width">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-lg-5">
                <form action="/profile" method="POST">
                    <div class="form_title">
                        <h3><strong>2</strong>Account Security</h3>
                    </div>
                    <div class="step">
                        <div class="row">
                            <div class="col-sm-12">
                                <span class="input">
                                    <input class="input_field" type="password" name="name" value="password"
                                        disabled="disabled" readonly="readonly">
                                    <label class="input_label">
                                        <span>Password</span>
                                    </label>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <span class="input">
                                    <input class="input_field" type="password" name="name" value="password">
                                    <label class="input_label">
                                        <span>Current password</span>
                                    </label>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <span class="input">
                                    <input class="input_field" type="password" name="name" value="password">
                                    <label class="input_label">
                                        <span>New password</span>
                                    </label>
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <span class="input">
                                    <input class="input_field" type="password" name="name" value="password">
                                    <label class="input_label">
                                        <span>Confirm new password</span>
                                    </label>
                                </span>
                            </div>
                        </div>

                        <div class="row" id="change-password">
                            <div class="col-sm-12">
                                <button type="button" href="#" class="btn_1 full-width">Change password</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>