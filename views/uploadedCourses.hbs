<section id="hero_in" class="courses">
    <div class="wrapper">
        <div class="container">
            <h1 class="fadeInUp"><span></span>Online courses</h1>
        </div>
    </div>
</section>
<!--/hero_in-->

<div class="filters_listing sticky_horizontal">
    <div class="container">
        <ul class="clearfix">
            <li>
                <div class="switch-field">

                    <input type="radio" id="allCourses" name="listing_filter" value="allCourses" {{#if isAllCoursesChosen}}
                        checked {{/if}} onclick="window.location.href='/my-courses/learning'">
                    <label for="allCourses">All courses</label>

                    <input type="radio" id="wishList" name="listing_filter" value="wishList" {{#if isWishListChosen}} checked
                        {{/if}} onclick="window.location.href='/my-courses/wishlist'">
                    <label for="wishList">WishList</label>

                </div>
            </li>
            <li>
                <div class="layout_view">
                    <a href="#"><i class="icon-th"></i></a>
                    <a href="#" class="active"><i class="icon-th-list"></i></a>
                </div>
            </li>
            <li>
                <select name="orderby" class="selectbox">
                    <option value="category">Category</option>
                    <option value="category 2">Literature</option>
                    <option value="category 3">Architecture</option>
                    <option value="category 4">Economy</option>
                </select>
            </li>
        </ul>
    </div>
    <!-- /container -->
</div>
<!-- /filters -->

<!-- All uploaded courses -->
{{#if uploadedCourses}}
<div class="container margin_30_95">
    <div class="main_title_2">
        <span><em></em></span>
        <h2>All Courses</h2>
    </div>
    <div class="row">
        {{#each uploadedCourses}}
        <div class="col-xl-4 col-lg-6 col-md-6">
            <div class="box_grid wow">
                <figure class="block-reveal">
                    <div class="block-horizzontal"></div>
                    <a href="#" class="wish_bt"></a>
                    <a href="/it/{{this.field.name}}/courses/{{this._id}}"><img src="{{this.image3xURL}}"
                            class="img-fluid" alt=""></a>
                </figure>
                <div class="wrapper">
                    <small>{{getFieldName this.field.name}}</small>
                    <h3>{{this.title}}</h3>
                    <p>{{this.instructor.name}}</p>
                    <!-- <div class="rating"><i class="icon_star voted"></i><i class="icon_star voted"></i>
                        <i class="icon_star voted"></i><i class="icon_star"></i><i class="icon_star"></i>
                        <small>(145)</small>
                    </div> -->
                    <div class="rating">
                        <small>{{this.rating}} stars - ({{this.reviews.length}} students reviewing)</small>
                        <small></small>
                    </div>
                </div>
                <ul>
                    <li><i class="far fa-eye"></i> {{this.numViews}}</li>
                    <li><a href="#">Enroll now</a></li>
                </ul>
            </div>
        </div>
        {{/each}}
    </div>
</div>

{{else}}
<div class="main_title_2">
    <!-- <span><em></em></span> -->
    <h2>You have not created any courses</h2>
</div>
{{/if}}